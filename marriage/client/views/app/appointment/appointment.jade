template(name="appointment_modal")
    #appointment_modal.modal.bottom-sheet
        .modal-content.center
            h4.pink-text Add event
            p Coming soon
        .modal-footer
            a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') Close
