template(name="experiences")
    #experiences.container.section.scrollspy
        .section
            .row
                +experiences_top
                +experiences_bottom


//
template(name="experiences_top")
    .col.s12.center
        each experiences
            if isTitle
                i.pink-text(class="#{icon} medium")
                h4= text

//
template(name="experiences_bottom")
    ul.scrollfire.experiences
        each experiences
            unless isTitle
                li
                    .col.s12.m6.l4
                        .card.white
                            .card-content.black-text
                                span.purple-text.i(class="#{icon} medium")
                                span.black-text
                                    b= name
                                p
                                    i= overFlowText
                            .card-action
                                a.modal-trigger.cyan-text(href="#experiences_modal-id")
                                    | READ MORE
                    +experiences_modal

